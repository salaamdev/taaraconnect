# Taara Internet Monitor - Production Configuration

# Taara API Credentials (REQUIRED - Replace with your actual credentials)
TAARA_PHONE_COUNTRY_CODE=254
TAARA_PHONE_NUMBER=your_phone_number_here
TAARA_PASSCODE=your_passcode_here
TAARA_PARTNER_ID=your_partner_id_here
TAARA_HOTSPOT_ID=your_hotspot_id_here

# Database Configuration
DATABASE_URL=sqlite:///./data/taara_monitoring.db

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# Data Collection Settings
COLLECTION_INTERVAL=900  # 15 minutes in seconds
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Security Settings (Generate secure random values for production)
SECRET_KEY=your-secure-random-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Performance Settings
WORKERS=1
MAX_CONNECTIONS=100

# Monitoring Settings
ENABLE_HEALTH_CHECK=True
HEALTH_CHECK_INTERVAL=60
